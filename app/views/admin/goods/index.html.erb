<%- model_class = Good -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">商品列表</div>
    </div>
    <div class="panel-body">
    <%= render 'search_form' %>
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th class="text-nowrap"><%= model_class.human_attribute_name(:code) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:name) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:goods_catalog_id) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:spec) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:status) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:score) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:price) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:ispromotion) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  <tbody>
    <% @goods.each do |good| %>
      <tr>
        <!-- <td><%= link_to good.id, admin_good_path(good) %></td> -->
        <td><%= good.code %></td>
        <td><%= good.name %></td>
        <td><%= good.goods_catalog_id %></td>
        <td><%= good.spec %></td>
        <td><%= good.status %></td>
        <td><%= good.score %></td>
        <td><%= good.price %></td>
        <td><%= good.ispromotion %></td>
        <td><%= good.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_good_path(good), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_good_path(good), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_good_path(good),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_good_path,
            :class => 'btn btn-warning' %>
          </div>
          <%= paginate @goods %>
                </div>
            </div>
        </div>


