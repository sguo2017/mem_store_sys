<%- model_class = RedPacketHistory -%>
<div class="container">
  <div class="panel">
	<div class="panel-heading">
      <div class="panel-title">红包发送历史</div>
    </div>
	<div class="panel-body">
	<%= render 'search_form' %>
	<div class="table-responsive block-mt">
<table class="table table-striped">
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:money) %></th>
      <th><%= model_class.human_attribute_name(:catalog) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @red_packet_histories.each do |red_packet_history| %>
      <tr>
        <!-- <td><%= link_to red_packet_history.id, admin_red_packet_history_path(red_packet_history) %></td> -->
        <td><%= red_packet_history.user.name %></td>
        <td><%= red_packet_history.money %></td>
        <td><%= red_packet_history.catalog %></td>
        <td><%= red_packet_history.phone_number %></td>
        <td><%= red_packet_history.status %></td>
        <td><%= red_packet_history.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_red_packet_history_path(red_packet_history), :class => 'btn btn-default btn-xs' %>
 <!--          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_red_packet_history_path(red_packet_history), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_red_packet_history_path(red_packet_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_red_packet_history_path,
            :class => 'btn btn-warning' %>
		</div> 
          <%= paginate @red_packet_histories %>
                </div>
            </div>
        </div>
