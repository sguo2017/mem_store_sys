<%- model_class = ScoreHistory -%>
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <div class="panel-title">会员积分历史</div>
    </div>
    <div class="panel-body">
    <%= render 'search_form' %>
<div class="table-responsive block-mt">
        <table class="table table-striped">
          <colgroup>
            <col width="20%">
          </colgroup>
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th class="text-nowrap"><%= model_class.human_attribute_name(:point) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:object_type) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:object_id) %></th>
      <th class="text-nowrap"><%= model_class.human_attribute_name(:oper) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:user_id) %></th>
      <th class="text-nowrap">
      <%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-nowrap">
      <%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @score_histories.each do |score_history| %>
      <tr>
        <!-- <td><%= link_to score_history.id, admin_score_history_path(score_history) %></td> -->
        <td><%= score_history.point %></td>
        <td><%= score_history.object_type %></td>
        <td><%= score_history.object_id %></td>
        <td><%= score_history.oper %></td>
        <% if score_history.user.blank? %>
          <td>-</td>
        <% else %>
          <td><%= score_history.user.name %></td>
        <% end %>
        <td><%= score_history.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_score_history_path(score_history), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_score_history_path(score_history), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_score_history_path(score_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '您确认?')) },
                      :class => 'btn btn-warning btn-xs mr5' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_score_history_path,
            :class => 'btn btn-warning' %>
</div>
<%= paginate @score_histories %>
</div>
            </div>
        </div>


